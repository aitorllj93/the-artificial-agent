{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2022",
    "module": "esnext",
    "lib": ["es2021", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@the-artificial-agent/chat": ["packages/chat/src/index.ts"],
      "@the-artificial-agent/core": ["packages/core/src/index.ts"],
      "@the-artificial-agent/digital-brain": [
        "packages/digital-brain/src/index.ts"
      ],
      "@the-artificial-agent/essentials": ["packages/essentials/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
